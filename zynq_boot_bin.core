CAPI=2:

name: AFRL:utility:zynq_boot_bin:1.0.0
description: Generate boot.bin for zynq platforms.

filesets:
  py:
    files:
      - py/zynq_boot_bin.py: { file_type: user, copyto: . }
    
targets:
  default:
    description: Script to use boot xml in BOOTFS folder to generate BOOT.bin
    filesets: [py]
    hooks:
      post_build: ["tool_vivado ? (zynq_boot_gen)"]

scripts:
  zynq_boot_gen:
    cmd : [python3, zynq_boot_bin.py]
